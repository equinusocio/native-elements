@define-mixin progress-indeterminate {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: block;
  background-color: env(--progressBorderColor);
  background-image:
    radial-gradient(env(--progressFilledColor) 20%, transparent 30%),
    radial-gradient(env(--progressFilledColor) 30%, transparent 30%);
  background-size: env(--progressHeight) env(--progressHeight);
  animation: progress-stripes 0.4s linear infinite;
}
