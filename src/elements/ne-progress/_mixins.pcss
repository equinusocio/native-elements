@define-mixin progress-indeterminate {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: block;
  background:
    radial-gradient(env(--progressFilledColor) 20%, transparent 30%) 0 0/env(--progressHeight) env(--progressHeight),
    radial-gradient(env(--progressFilledColor) 30%, transparent 30%) 0 0/env(--progressHeight) env(--progressHeight) env(--progressBackground);
  animation: progress-stripes 0.4s linear infinite;
}
